[user]
    name = alexsocha
    email = alex@alexsocha.com
[alias]
    st = status
    cm = commit -m
    co = checkout
    com = checkout master
    cob = "!f(){ git checkout $(git branch | fzf ); }; f"
    aa = add -A
    rb = rebase
    rbi = "!f(){ git rb -i HEAD~${1}; }; f"
    ca = commit --amend
    cane = commit --amend --no-edit
    save = commit -m "SAVEPOINT"
    lg = log --all --graph --decorate --oneline
[core]
    editor = nvim
[pull]
    rebase = true
[push]
    default = current
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[rebase]
    autosquash = true
